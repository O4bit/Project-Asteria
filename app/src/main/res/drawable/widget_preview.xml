<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#0B1020"
                android:startColor="#0F172A"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#334155" />
        </shape>
    </item>
    
    <!-- Mock content area -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Mock header -->
    <item
        android:left="24dp"
        android:top="24dp"
        android:right="24dp"
        android:bottom="120dp">
        <shape android:shape="rectangle">
            <solid android:color="#E5E7EB" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Mock image area -->
    <item
        android:left="24dp"
        android:top="60dp"
        android:right="24dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#9CA3AF" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
